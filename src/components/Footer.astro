      <!-- Quick links -->
      <div class="col-span-1">
        <h3 class="text-lg font-medium mb-3">
          {t('footer.quickLinks')}
        </h3>
        <ul class="space-y-2">
          <li><a href={translatePath('/')} class="text-gray-400 hover:text-white transition text-sm">
            {lang === 'de' ? 'Startseite' : 
             lang === 'fr' ? 'Accueil' :
             lang === 'es' ? 'Inicio' :
             lang === 'zh' ? '首页' :
             lang === 'ru' ? 'Главная' :
             lang === 'ar' ? 'الرئيسية' :
             'Home'}
          </a></li>
          <li><a href={translatePath('/#how-it-works')} class="text-gray-400 hover:text-white transition text-sm">{t('nav.howItWorks')}</a></li>
          <li><a href={translatePath('/governance')} class="text-gray-400 hover:text-white transition text-sm">{t('nav.governance')}</a></li>
          <li><a href={translatePath('/technical-docs')} class="text-gray-400 hover:text-white transition text-sm">{t('nav.docs')}</a></li>
        </ul>
      </div>
      
      <!-- Legal -->
      <div class="col-span-1">
        <h3 class="text-lg font-medium mb-3">
          {t('footer.legal')}
        </h3>
        <ul class="space-y-2">
          <li><a href={translatePath('/terms')} class="text-gray-400 hover:text-white transition text-sm">
            {lang === 'de' ? 'Nutzungsbedingungen' : 
             lang === 'fr' ? 'Conditions d\'utilisation' :
             lang === 'es' ? 'Términos de uso' :
             lang === 'zh' ? '使用条款' :
             lang === 'ru' ? 'Условия использования' :
             lang === 'ar' ? 'شروط الاستخدام' :
             'Terms of Use'}
          </a></li>
          <li><a href={translatePath('/privacy')} class="text-gray-400 hover:text-white transition text-sm">
            {lang === 'de' ? 'Datenschutz' : 
             lang === 'fr' ? 'Politique de confidentialité' :
             lang === 'es' ? 'Política de privacidad' :
             lang === 'zh' ? '隐私政策' :
             lang === 'ru' ? 'Политика конфиденциальности' :
             lang === 'ar' ? 'سياسة الخصوصية' :
             'Privacy Policy'}
          </a></li>
          <li><a href={translatePath('/risk')} class="text-gray-400 hover:text-white transition text-sm">
            {lang === 'de' ? 'Risikohinweise' : 
             lang === 'fr' ? 'Divulgation des risques' :
             lang === 'es' ? 'Divulgación de riesgos' :
