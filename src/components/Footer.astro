---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

// Get current language and translations
const lang = Astro.locals.lang || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const currentYear = new Date().getFullYear();

const links = {
  main: [
    { name: "Pools", href: "/pools" },
    { name: "Dashboard", href: "/dashboard" },
    { name: "Governance", href: "/governance" },
    { name: "Docs", href: "/docs" }
  ],
  community: [
    { name: "Ambassador Program", href: "/ambassador" },
    { name: "Discord", href: "https://discord.gg/btc-retirement" },
    { name: "Twitter", href: "https://twitter.com/btc_retirement" },
    { name: "GitHub", href: "https://github.com/btc-retirement" },
    { name: "Forum", href: "https://forum.btc-retirement.org" }
  ],
  support: [
    { name: "FAQ", href: "/docs/faq" },
    { name: "Contact", href: "/contact" },
    { name: "Bug Bounty", href: "/bounty" },
    { name: "Privacy Policy", href: "/privacy" }
  ]
};
