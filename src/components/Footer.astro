        </ul>
      </div>
      
      <!-- Contact -->
      <div class="col-span-1">
        <h3 class="text-lg font-medium mb-3">
          {t('footer.contact')}
        </h3>
        <p class="text-gray-400 text-sm mb-3">
          {t('footer.questions')}
        </p>
        <a href="mailto:info@btcretirement.org" class="text-purple-400 hover:text-purple-300 transition text-sm">info@btcretirement.org</a>
      </div>
    </div>
    
    <div class="border-t border-gray-800 mt-8 pt-6 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-500 text-sm mb-4 md:mb-0">{t('footer.rights')}</p>
      <div class="flex items-center">
        <div class="flex items-center space-x-2 text-sm text-gray-500">
