---
// Technical parameters for academic display
const fees = {
  conversionFee: 1.5,
  depositFee: 0.3,
  performanceFee: 20,
  exitFeeEarly: 2.0,
  exitFeeMaturity: 0.5
};

const minAmount = 0.001;
const maxAmount = 1;
---

<section class="py-20 relative overflow-hidden bg-gradient-to-br from-purple-600 via-indigo-600 to-blue-500 text-white">
  <div class="absolute top-10 left-10 opacity-20 w-64 h-64">
    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="blob-animation">
      <path fill="#FFFFFF" d="M45.3,-51.2C58.4,-40.6,69,-25.2,71.9,-8.4C74.9,8.4,70.2,26.8,59.1,38.7C48,50.6,30.6,56,13.1,59.8C-4.3,63.6,-21.9,66,-36.9,59.5C-51.9,53,-64.4,37.8,-67.6,21C-70.8,4.3,-64.9,-13.9,-55.3,-28.5C-45.6,-43.1,-32.2,-54,-17.4,-59.9C-2.7,-65.7,13.5,-66.5,28.5,-62.7C43.6,-58.9,57.4,-50.4,73.3,-37.6C89.1,-24.9,107,-8.8,117.3,12C127.6,32.8,130.3,58.3,118.9,71.1C107.5,83.9,82,83.9,59.9,82.5C37.8,81.1,19.1,78.3,0,78.2C-19.1,78.2,-38.1,80.9,-54.5,74.4C-70.9,67.9,-84.6,52.2,-92.2,33.8C-99.8,15.4,-101.3,-5.6,-94.1,-22.6C-86.9,-39.5,-71,-52.3,-54.5,-61C-38,-69.7,-21,-74.2,-3.3,-70.6C14.5,-67,29,-55.2,45.3,-51.2Z" transform="translate(100 100)" />
    </svg>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <!-- Academic badge -->
        <div class="inline-block px-4 py-1 rounded-lg bg-white/10 text-white/90 text-sm font-mono mb-4">
          SUBSCRIPTION_PROTOCOL(v1.2.0)
        </div>
        
        <h2 class="text-3xl md:text-4xl font-light mb-4">Start Your BTC Retirement Plan</h2>
        <p class="text-xl text-white/80 max-w-xl mx-auto">Begin your journey with as little as 0.001 BTC per month</p>
        
        <!-- Technical specifications badge -->
        <div class="mt-4 inline-flex items-center px-3 py-1 rounded-full bg-white/10 backdrop-blur-sm text-xs font-mono">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
          </svg>
          Compliant with ERC-1400 Security Tokens
        </div>
      </div>
      
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 shadow-xl">
        <!-- Protocol info bar -->
        <div class="flex flex-wrap gap-4 justify-between text-xs font-mono mb-8 pb-6 border-b border-white/10">
          <div class="flex items-center">
            <span class="w-2 h-2 bg-green-400 rounded-full mr-2"></span>
            <span>Protocol: Cayman VASP Exempted Fund</span>
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-blue-400 rounded-full mr-2"></span>
            <span>Fee Structure: {fees.performanceFee}% on profit</span>
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-purple-400 rounded-full mr-2"></span>
            <span>Risk Control: Automated (-20% stop loss)</span>
          </div>
        </div>
      
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="first-name" class="block text-sm font-light text-white/80 mb-1">First Name</label>
              <input 
                type="text" 
                id="first-name" 
                name="first-name" 
                class="w-full px-4 py-3 rounded-full border border-white/20 bg-white/5 text-white focus:ring-2 focus:ring-white/50 focus:border-white/50 outline-none transition"
              />
            </div>
            <div>
              <label for="last-name" class="block text-sm font-light text-white/80 mb-1">Last Name</label>
              <input 
                type="text" 
                id="last-name" 
                name="last-name" 
                class="w-full px-4 py-3 rounded-full border border-white/20 bg-white/5 text-white focus:ring-2 focus:ring-white/50 focus:border-white/50 outline-none transition"
              />
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-sm font-light text-white/80 mb-1">Email Address</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full px-4 py-3 rounded-full border border-white/20 bg-white/5 text-white focus:ring-2 focus:ring-white/50 focus:border-white/50 outline-none transition"
            />
          </div>
          
          <div>
            <label for="subscription-amount" class="block text-sm font-light text-white/80 mb-1">Monthly Contribution Amount (BTC)</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-white/60">₿</span>
              <input 
                type="number" 
                id="subscription-amount" 
                name="subscription-amount" 
                min={minAmount} 
                max={maxAmount} 
                step="0.001"
                value="0.01"
                class="w-full pl-8 px-4 py-3 rounded-full border border-white/20 bg-white/5 text-white focus:ring-2 focus:ring-white/50 focus:border-white/50 outline-none transition"
              />
            </div>
            <p class="text-xs text-white/60 mt-1">Min: {minAmount} BTC – Max: {maxAmount} BTC per month</p>
          </div>
          
          <div>
            <label for="lock-period" class="block text-sm font-light text-white/80 mb-1">Lock Period</label>
            <div class="grid grid-cols-4 gap-3">
              {[5, 10, 15, 20].map((years, i) => (
                <label class="relative cursor-pointer">
                  <input 
                    type="radio" 
                    name="lock-period" 
                    value={years}
                    class="sr-only peer" 
                    checked={years === 10}
                  />
                  <div class="py-3 text-center rounded-full border border-white/20 bg-white/5 peer-checked:bg-white peer-checked:text-purple-600 peer-checked:border-white transition">
                    {years} Years
                  </div>
                  <div class="absolute bottom-full left-0 right-0 mb-1 text-[10px] text-center text-white/70 font-mono">
                    {i === 0 && `+10% bonus`}
                    {i === 1 && `+15% bonus`}
                    {i === 2 && `+20% bonus`}
                    {i === 3 && `+25% bonus`}
                  </div>
                </label>
              ))}
            </div>
          </div>
          
          <!-- Parameter visualization - academic/technical touch -->
          <div class="bg-white/5 border border-white/10 rounded-xl p-4 mt-4">
            <h4 class="text-sm font-medium mb-3 font-mono">Subscription Parameters</h4>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 text-xs">
              <div class="flex flex-col">
                <span class="text-white/60 mb-1">Conversion Fee</span>
                <span class="font-mono">{fees.conversionFee}%</span>
              </div>
              <div class="flex flex-col">
                <span class="text-white/60 mb-1">Deposit Fee</span>
                <span class="font-mono">{fees.depositFee}%</span>
              </div>
              <div class="flex flex-col">
                <span class="text-white/60 mb-1">Early Exit</span>
                <span class="font-mono">{fees.exitFeeEarly}% principal</span>
              </div>
              <div class="flex flex-col">
                <span class="text-white/60 mb-1">Maturity Exit</span>
                <span class="font-mono">{fees.exitFeeMaturity}%</span>
              </div>
            </div>
          </div>
          
          <div class="bg-white/10 p-5 rounded-xl border border-white/20">
            <label class="flex items-start">
              <input type="checkbox" class="mt-1 rounded border-white/20 bg-white/5 text-purple-600 focus:ring-2 focus:ring-white/30" />
              <span class="ml-2 text-sm text-white/80">
                I understand this is a time-locked subscription with an early-exit penalty of 2% principal. I agree to the <a href="/terms" class="text-white hover:underline">Terms of Service</a> and <a href="/privacy" class="text-white hover:underline">Privacy Policy</a>.
              </span>
            </label>
          </div>
          
          <div>
            <button type="submit" class="w-full py-3 px-6 bg-white hover:bg-white/90 text-purple-600 font-medium rounded-full transition transform hover:-translate-y-0.5 hover:shadow-lg">
              Connect Wallet to Continue
            </button>
            <p class="text-xs text-center mt-3 text-white/60">
              Minimum 12-month commitment required. Privacy-first KYC via on-chain attestations.
            </p>
          </div>
          
          <div class="flex items-center pt-2">
            <div class="flex-1 border-t border-white/20"></div>
            <span class="px-4 text-sm text-white/50">or</span>
            <div class="flex-1 border-t border-white/20"></div>
          </div>
          
          <div>
            <a href="#" class="flex items-center justify-center w-full py-3 px-6 bg-white/10 border border-white/20 text-white font-medium rounded-full transition hover:bg-white/15">
              <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 0C5.376 0 0 5.376 0 12C0 18.624 5.376 24 12 24C18.624 24 24 18.624 24 12C24 5.376 18.624 0 12 0ZM5.568 13.968C5.568 12.096 7.088 10.56 8.976 10.56C9.856 10.56 10.64 10.896 11.232 11.448L9.744 12.936C9.504 12.696 9.248 12.576 8.96 12.576C8.064 12.576 7.344 13.296 7.344 14.176C7.344 15.056 8.064 15.776 8.96 15.776C9.264 15.776 9.52 15.648 9.744 15.408L11.232 16.896C10.64 17.448 9.856 17.792 8.976 17.792C7.088 17.792 5.568 16.24 5.568 13.968ZM13.072 17.888V13.92H16.656V11.92H13.072V8H11.072V17.888H13.072Z" fill="currentColor"/>
              </svg>
              Connect with Web3 Wallet
            </a>
          </div>
          
          <div class="text-center mt-4">
            <a href="/ambassador" class="text-sm text-white hover:underline">Have a referral code?</a>
          </div>
        </form>
      </div>
      
      <!-- Technical note - showing protocol details -->
      <div class="mt-8 text-center">
        <div class="inline-block font-mono text-xs py-1 px-3 bg-white/10 rounded-md text-white/70">
          <span>Protocol version 1.2.0</span>
          <span class="mx-2">|</span>
          <span>Smart contract: 0x7e45...F9d2</span>
          <span class="mx-2">|</span>
          <a href="#" class="underline">View audit</a>
        </div>
      </div>
    </div>
  </div>

  <style>
    @keyframes blob-float {
      0%   { transform: translate(0, 0) scale(1); }
      50%  { transform: translate(10px, -10px) scale(1.05); }
      100% { transform: translate(0, 0) scale(1); }
    }
    
    .blob-animation {
      animation: blob-float 12s ease-in-out infinite;
    }
  </style>
</section> 